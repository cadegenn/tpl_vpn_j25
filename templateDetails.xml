<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <name>VPN</name>
    <creationDate>12/04/12</creationDate>
    <author>DEGENNES Charles-Antoine</author>
    <authorEmail>cadegenn@gmail.com</authorEmail>
    <authorUrl>http://www.volontairesnature.org</authorUrl>
    <copyright>Copyright (C) 2012-2014 DEGENNES Charles-Antoine</copyright>
    <copyright>Copyright (C) 2010 Raphael Chassigneux</copyright>
    <license>AGPL</license>
    <version>2.0.0</version>
    <description>Default VPN template webdesigned by Raphael Chassigneux</description>
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>params.ini</filename>
        <folder>images</folder>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>js</folder>
		<folder>language</folder>
    </files>
    <positions>
        <position>breadcrumbs</position>
		<position>permalink</position>
        <position>left</position>
        <position>right</position>
        <position>top</position>
        <position>footer</position>
        <position>syndicate</position>
        <position>debug</position>
        <position>user1</position>
        <position>user2</position>
        <position>user3</position>
        <position>user4</position>
        <position>user5</position>
        <position>user6</position>
    </positions>
	
	<languages folder="language">
		<language tag="fr-FR">fr-FR/fr-FR.tpl_vpn.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.tpl_vpn.sys.ini</language>
	</languages>
	
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="favicon" type="media" default="templates/vpn/images/logo/apl.ico" label="Favicon" description="Choisissez l'icône de votre site." />
                <field name="logoImage" type="media" default="templates/vpn/images/logo/Logo-VPN.png" label="Logo" description="Choisissez un logo dans la banque d'images." />
                <field name="logoText" type="text" default="Volontaires Pour la Nature" size="50" label="Texte du logo" description="Si vous n'avez pas de logo, écrivez votre titre ici." />
                <field name="sloganText" type="text" default="" size="50" label="Slogan" description="Si vous avez un sous_titre ou un slogan, écrivez-le là." />
            </fieldset>
			
			<fieldset name="analytics" label="TPL_VPN_SETTINGS_ANALYTICS">
				<field name="google-analytics" type="radio" default="0" label="TPL_VPN_SETTINGS_GA_ENABLE_GOOGLEANALYTICS_LABEL" description="TPL_VPN_SETTINGS_GA_ENABLE_GOOGLEANALYTICS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="ga-userid" type="text" default="" size="50" label="TPL_VPN_SETTINGS_GA_USERID_LABEL" description="TPL_VPN_SETTINGS_GA_USERID_DESC" />
				<field name="ga-site" type="text" default="" size="50" label="TPL_VPN_SETTINGS_GA_SITE_LABEL" description="TPL_VPN_SETTINGS_GA_SITE_DESC" />
			</fieldset>
        </fields>
    </config>
</extension>